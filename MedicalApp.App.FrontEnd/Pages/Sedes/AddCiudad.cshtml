@page
@model MedicalApp.App.FrontEnd.Pages.Sedes.AddCiudadModel
@{
}
<h1>Asignar Ciudad</h1>
<form method="post">
    <div class="form-group">
        <label for="idSede">Sede</label>
        <input id="idSede" name="idSede" value="@Model.sede.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label for="idCiudad">Ciudad</label>
        <select name="idCiudad" class="form-control">
            @foreach (var ciudad in Model.ciudades)
            {
                <option value="@ciudad.Id">@ciudad.NombreCiudad</option>
            }
        </select>    
    <button type="submit" class="btn btn-primary">Asociar ciudad</button>
</form>
<a asp-page="./Index" class="btn btn-primary">Regresar</a>