@page
@using MedicalApp.App.Dominio;
@model MedicalApp.App.FrontEnd.Pages.Agendamientos.CreateModel
@{
}
<h1>Nuevo Agendamiento</h1>
<form method="post">

    <!--<div class="form-group">
        <label asp-for="agendamiento.Paciente"></label>
        <select asp-for="agendamiento.Paciente" asp-items="Html.GetEnumSelectList<Paciente>()" class="form-control">
        </select>
        <span asp-validation-for="agendamiento.Paciente" class="text-danger"></span>
    </div>-->

    <div class="form-group">
        <label for="idPaciente">Paciente</label>
        <select name="idPaciente" class="form-control">
            @foreach (var paciente in Model.pacientes)
            {
                <option value="@paciente.Id">@paciente.Nombre @paciente.Apellido</option>
            }
        </select>    
    </div>


    <div class="form-group">
        <label asp-for="agendamiento.TipoCita"></label>
        <select asp-for="agendamiento.TipoCita" asp-items="Html.GetEnumSelectList<TipoCita>()" class="form-control">
        </select>
        <span asp-validation-for="agendamiento.TipoCita" class="text-danger"></span>
    </div>    

    <!--<div class="form-group">
        <label asp-for="agendamiento.Ciudad"></label>
        <select asp-for="agendamiento.Ciudad" asp-items="Html.GetEnumSelectList<Ciudad>()" class="form-control">
        </select>
        <span asp-validation-for="agendamiento.Ciudad" class="text-danger"></span>
    </div>-->

    <div class="form-group">
        <label asp-for="agendamiento.Especialidad"></label>
        <select asp-for="agendamiento.Especialidad" asp-items="Html.GetEnumSelectList<Especialidad>()" class="form-control">
        </select>
        <span asp-validation-for="agendamiento.Especialidad" class="text-danger"></span>
    </div> 

    <div class="form-group">
        <label for="idSede">Sede</label>
        <select name="idSede" class="form-control">
            @foreach (var sede in Model.sedes)
            {
                <option value="@sede.Id">@sede.NombreSede</option>
            }
        </select>    
    </div>

    <div class="form-group">
        <label for="idMedico">Medico</label>
        <select name="idMedico" class="form-control">
            @foreach (var medico in Model.medicos)
            {
                <option value="@medico.Id">@medico.Nombre @medico.Apellido</option>
            }
        </select>    
    </div>

    <div class="form-group">
        <label asp-for="agendamiento.FechaCita"></label>
        <input asp-for="agendamiento.FechaCita" class="form-control">
        <span asp-validation-for="agendamiento.FechaCita" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="agendamiento.Valor_Consulta"></label>
        <input asp-for="agendamiento.Valor_Consulta" class="form-control">
        <span asp-validation-for="agendamiento.Valor_Consulta" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Agendar Cita</button>
</form>
<a asp-page="./Index" class="btn btn-primary">Regresar</a>