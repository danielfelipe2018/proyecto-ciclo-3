@model MedicalApp.App.FrontEnd.Pages.Ciudades.EditModel
@{
}
<h1>Editar Ciudad</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="ciudad.Id"></label>
        <input asp-for="ciudad.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="ciudad.NombreCiudad"></label>
        <input asp-for="ciudad.NombreCiudad" class="form-control">
        <span asp-validation-for="ciudad.NombreCiudad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar ciudad</button>
</form>
<a asp-page="./Index" class="btn btn-primary">Regresar</a>